<p id="notice"><%= notice %></p>

<h1>Solutions</h1>

<div class="table-responsive">
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>title</th>
      <th>description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.title %></td>
        <td><%= solution.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

  <%= form_tag solutions_destroy_path do %>
  <%= submit_tag "Delete Solutions" %>
  <% end %>

  <br>

